<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.el_juego_de_la_vida.TableroController">
    <top>
        <Label fx:id="TitleText" text="EL JUEGO DE LA VIDA" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <content>
                <GridPane fx:id="gridPaneTablero" gridLinesVisible="false">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="ALWAYS" />
                    </rowConstraints>
                </GridPane>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="playButton" disable="true" onAction="#onContinueButtonClick" text="Continue" />
            <Button fx:id="pauseButton" disable="true" onAction="#onPauseButtonClick" text="Pause" />
            <Button fx:id="stopButton" disable="true" text="Stop" />
            <Button fx:id="startGameButton" onAction="#onStartGameButtonClick" text="Iniciar Juego" />
            <Label fx:id="timerLabel" text="Time: 0 seconds" />
        </HBox>
    </bottom>
</BorderPane>
