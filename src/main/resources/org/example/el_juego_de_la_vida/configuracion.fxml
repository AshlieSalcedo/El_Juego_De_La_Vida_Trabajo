<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.el_juego_de_la_vida.ConfiguracionController">
    <children>
        <TabPane prefHeight="401.0" prefWidth="540.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Tablero">
                    <content>
                        <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="336.0" prefWidth="560.0">
                            <children>
                                <Slider fx:id="sliderN" layoutX="94.0" layoutY="14.0" majorTickUnit="1.0" max="10.0" min="1.0" minorTickCount="0" prefHeight="193.0" prefWidth="371.0" showTickLabels="true" showTickMarks="true" />
