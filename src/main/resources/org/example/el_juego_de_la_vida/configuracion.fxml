                                <Label layoutX="54.0" layoutY="89.0" text="M" />
                                <Label layoutX="55.0" layoutY="186.0" text="N" />
                                <Label fx:id="configuracion" layoutX="210.0" layoutY="34.0" prefHeight="18.0" prefWidth="139.0" text="Dimensiones del tablero" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <!-- Otros tabs -->
                <Tab text="Recursos">
                    <content>
                        <AnchorPane prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Button alignment="BOTTOM_RIGHT" layoutX="475.0" layoutY="292.0" mnemonicParsing="false" onAction="#onIniciarButtonClick" prefHeight="26.0" prefWidth="57.0" text="Iniciar " />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>
